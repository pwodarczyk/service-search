<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"

    android:id="@+id/mainlayout"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:layout_height="wrap_content">


        <com.bluehorntech.generalservicesapplication.CircularNetworkImageView

        android:id="@+id/imgprofile"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:paddingBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dip" />

    <TextView
        android:id="@+id/tv_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgprofile"
        android:textSize="15dp"
        android:text="Name"
        android:paddingRight="10dp"
        android:textColor="#ff1e2503"
         />

    <TextView
        android:id="@+id/tv_job_disription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgprofile"
        android:layout_below="@+id/tv_client_name"
        android:text="Category"
        android:visibility="gone"
        android:textColor="#a7080910" />


    <TextView
        android:id="@+id/tvEmpSelfDiscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspect electrical systems, equipment, and components to identify hazards, defects, and the need for adjustment or repair, and to ensure compliance with codes. "
        android:layout_toRightOf="@+id/imgprofile"
        android:maxLines="3"
        android:paddingRight="10dp"
       android:layout_marginRight="65dp"
        android:layout_marginTop="-2dp"
        android:layout_below="@+id/tv_client_name"
        android:textColor="#97000000" />








    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
       />


    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dip"
        android:background="@drawable/painter"
        android:layout_below="@+id/imgprofile"
        android:id="@+id/imagecat"
 />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/imagecat"
        android:background="@drawable/plumber"
        android:layout_below="@+id/imgprofile"
        android:id="@+id/imagecat2"
        />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="70dp"
        android:id="@+id/layoutcalandreviews"
        android:layout_alignParentRight="true"
        android:layout_height="fill_parent"
        android:background="#F7F7F7"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"


        >

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/btnCall"
            android:background="@drawable/phonecall"
            />
        <TextView
            android:id="@+id/year"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line"
            android:background="@drawable/rating"
            android:textColor="#97000000" />

        <TextView
            android:maxLength="4"
            android:id="@+id/ratingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.45"
            android:textColor="#00A1D8"
            android:layout_toRightOf="@+id/year"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/line"
            />
        <TextView
            android:id="@+id/yearrrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="10dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/year"
            android:layout_below="@+id/ratingtext"
            android:textColor="#97000000" />



        <TextView
            android:id="@+id/tvexperianceshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call me"
            android:textColor="#00A1D8"
            android:textSize="15dp"
            android:visibility="gone"
            android:layout_marginRight="-10dp"
            android:layout_toRightOf="@+id/btnCall"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/callme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call me"
            android:textColor="#00A1D8"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="-10dp"
            android:layout_toRightOf="@+id/btnCall"
            android:layout_marginLeft="4dp"
            />



        <View
            android:layout_width="fill_parent"
            android:layout_height="1.05sp"
            android:id="@+id/line"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/btnCall"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           android:layout_centerHorizontal="true"
            android:background="#c0c0c0"/>




        <View
            android:layout_width="fill_parent"
            android:layout_height="1.05sp"
            android:id="@+id/line2"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/yearrrrrr"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:background="#c0c0c0"/>

        <TextView
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="Start Job"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/customshapestartjob"
            android:layout_marginTop="5dp"
            android:id="@+id/tvjobstatusforuser"
            android:layout_below="@+id/line2"
             />

    </RelativeLayout>


</RelativeLayout>